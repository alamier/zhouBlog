<% provide(:title, "Log in") %>

<a class="a-home-button" href="/">
  <%=	 image_tag("lz.png",class: 'img-home-btn') %>
</a>

<div class="avatar-container" style="margin-top: 150px;border-top: 1px solid #ccc;width: 40%">
  <a href="<%= about_path %>">
    <%=	 image_tag "avatar.png", class: "avatar" %>
  </a>
</div>

<div class="form-container">
  <h1 class="h1-form-title">Admin Login</h1>
  <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-input' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-input' %>

      <%= f.submit "Log in", class: "primary-btn" %>
  <% end %>
</div>
