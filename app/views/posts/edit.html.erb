<%	 provide(:title,"Editing " + @post.title) %>

<a class="a-home-button" href="/">
  <%=	 image_tag("lz.png",class: 'img-home-btn') %>
</a>

<div class="title-container">
  <%=	 image_tag("title-image.png", class: "title-image") %>
</div>
<div class="avatar-container">
  <a href=<%=	 about_path %>>
    <%=	 image_tag "avatar.png", class: "avatar" %>
  </a>
</div>


<div class="article-editor-container">
  <h1>Edit Post</h1>

  <%=	 form_for @post do |f| %>

      <% if @post.errors.any? %>
          <h2 class=""><%=	 pluralize @post.errors.count, "error" %>
            prevented this post from updating
          </h2>
          <ul>
            <%	 @post.errors.full_messages.each do |msg| %>
                <li><%=	 msg %></li>
            <%	 end %>
          </ul>
      <%	 end %>

      <p>
        <%=	 f.label :title %>
        <%=	 f.text_field :title, class:"article-title-editor" %>
      </p>

      <p>
        <%=	 f.label :body %>
        <%=	 f.text_area :body, class:"article-body-editor" %>
      </p>

      <p>
        <%=	 f.submit "update post", class:"primary-btn" %>
      </p>
  <%	 end %>
</div>
